.facts {
	margin-top: 10px
	.container {
		display: flex
		flex-direction: column
		align-items center
		padding-top: 75px
		border-top: 1px solid #dadada
	}
	.item {
		display: flex
		margin-bottom: 45px
		font-family: latolight
		font-size: 22px
		font-weight: 600
		line-height: 22px
		color: #454545
		&:nth-child(2) {
			p.img {
				&--left {
					&:before {
						background-position: 0 -88px
					}
				}
			}
		}
		&:nth-child(3) {
			p.img {
				&--left {
					&:before {
						background-position: 0 -182px
					}
				}
			}
		}
		p {
			width: 330px
			&.text {
				&--right {
					margin-right: 19px
					text-align: right
				}
			}
			&.img {
				&--left {
					position: relative
					padding-left: 63px
					&:before {
						content: ''
						position: absolute
						top: 0
						left: 0
						width: 47px
						height: 55px
						background: url(/img/facts-iconset.png) no-repeat
					}
				}
			}
		}
		b {
			font-family: latoregular
			color: #4786af
		}
	}
}

@media (max-width: 800px) {
    .facts {
		.item {
			width: 100%
		}
    }
}

@media (max-width: 580px) {
	.facts {
		.container {

		}
		.item {
			flex-direction: column
			padding-bottom: 40px
			width: 100%
			border-bottom: 1px solid #454545
			&:last-child {
				border: none
			}
			p {
				width: 100%
				text-align: center
				&.text {
					&--right {
						text-align: center
					}
				}
				&.img {
					&--left {
						padding: 80px 0 0 0
						&:before {
							top: 20px
							left: 50%
							transform: translateX(-50%)
						}
					}
				}
			}
		}
	}
}
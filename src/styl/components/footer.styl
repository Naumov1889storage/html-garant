.footer {
	background: #ebebeb
	font-family: latoregular
	font-size: 18px
	line-height: 26px
	color: #454545
	p {
		margin-right: 20px
	}
	&__wrap {
		padding: 10px 0 10px 0
		min-height: 94px
		height: 100%
	}
}

@media (max-width: 920px) {
	.footer {
		&__logo {
			display: none
		}
	}
}
@media (max-width: 745px) {
	.footer {
		&__wrap {
			flex-direction: column
			align-items: flex-start
		}
		&__location {
			margin-bottom: 10px
		}
	}
}
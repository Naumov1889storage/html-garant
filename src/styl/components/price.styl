.price {
	margin: 92px 0 80px 0
	h2 {
		margin-bottom: 90px
		padding: 20px 0 20px 0
		min-height: 80px
		font-family: latoblack
		font-size: 30px
		color: #4c88be
		text-align: center
		text-transform: uppercase
		background: #e7f5ff
	}
	&__form {
		display: flex
		flex-direction: column
		align-items: center
		max-width: 543px
		width: 100%
		min-height: 354px
		background: url(/img/price-form-bg.jpg) no-repeat
		background-size: cover
		.title {
			margin: 65px 0 28px 0
			font-family: latoregular
			font-size: 23px
			font-weight: 600
			color: #595959
			text-transform: uppercase
		}
		input {
			min-width: 192px
			width: 192px
			margin-right: 20px
			border-color: #b1b1b1
			&:last-child {
				margin-right: 0
			}
			&::placeholder {
				color: #777777;
				opacity: 1;
			}
			&:-ms-input-placeholder {
				color: #777777;
			}
			&::-ms-input-placeholder {
				color: #777777;
			}
		}
		button {
			margin: 22px 0 16px 0
		}
		.agreement {
			color: #989898
			a {
				color: #6a9dcf
			}
		}
	}

	&__right {
		margin: 22px 0 0 10%
		width: 300px
		font-family: latoregular
		text-align: center
		color: #595959
		p {
			margin: 20px 0 10px
			font-size: 24px
			line-height: 29px
		}
		span {
			font-size: 32px
			font-weight: 600
			b {
				font-family: latoblack
				font-size: 50px
				color: #4c88be
			}
		}
	}
}

@media (max-width: 930px) {
	.price {
		h2 {
			margin-bottom: 0
		}
		&__wrap {
			flex-direction: column
			align-items: center
		}
		&__right {
			margin: 60px 0 0 0
		}
	}
}

@media (max-width: 630px) {
    .price {
		&__form {
			padding: 0 30px 60px 30px
			background-size: 100% 354px
		}
    }
}

@media (max-width: 520px) {
    .price {
		&__form {
			background-size: 100% 400px
		}
		.input__wrap {
			flex-direction: column
			height: 100%
			input {
				margin-right: 0
				margin-bottom: 15px
				min-height: 39px
				&:last-child {
					margin-bottom: 0
				}
			}
		}
    }
}

@media (max-width: 430px) {
	.price {
		.container {
			padding: 0
		}
		&__form {
			padding-right: 15px
			padding-left: 15px
			background-size: 200% 470px
			background-position: -100px 0
			button {
				width: 100%
			}
		}
		.input__wrap {
			width: 100%
			input {
				min-width: 100%
				width: 100%
			}
		}
	}
}
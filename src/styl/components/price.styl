.price {
	margin-top: 92px
	h2 {
		margin-bottom: 90px
		padding: 20px 0 20px 0
		height: 80px
		font-family: latoblack
		font-size: 30px
		color: #4c88be
		text-align: center
		text-transform: uppercase
		background: #e7f5ff
	}
	&__form {
		display: flex
		flex-direction: column
		align-items: center
		width: 543px
		height: 354px
		background: url(/img/price-form-bg.jpg) no-repeat
		background-size: cover
		.title {
			margin: 65px 0 28px 0
			font-family: latoregular
			font-size: 23px
			font-weight: 600
			color: #595959
			text-transform: uppercase
		}
		input {
			min-width: 192px
			width: 192px
			margin-right: 20px
			border-color: #b1b1b1
			&:last-child {
				margin-right: 0
			}
			&::placeholder {
				color: #777777;
				opacity: 1;
			}
			&:-ms-input-placeholder {
				color: #777777;
			}
			&::-ms-input-placeholder {
				color: #777777;
			}
		}
		button {
			margin: 22px 0 16px 0
		}
		.agreement {
			color: #989898
			a {
				color: #6a9dcf
			}
		}
	}

	&__right {
		margin: 22px 0 0 10%
		width: 300px
		font-family: latoregular
		text-align: center
		color: #595959
		p {
			margin: 20px 0 10px
			font-size: 24px
			line-height: 29px
		}
		span {
			font-size: 32px
			font-weight: 600
			b {
				font-family: latoblack
				font-size: 50px
				color: #4c88be
			}
		}
	}
}